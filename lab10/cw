from PIL import Image
import numpy as np
import matplotlib.pyplot as plt
from PIL import ImageFilter
from PIL import ImageChops
from PIL import ImageOps
from PIL import ImageStat as stat

postac = Image.open("postac.jpg")

#Zad1
w,h = postac.size
s_w = 0.15 # skala zmiany rozmiaru w
s_h = 0.27 # skala zmiany rozmiaru h
w0 = int(w*s_w)
h0 = int(h*s_h)
postac_1 = im1 = postac.resize((w0,h0), 0, reducing_gap = None)
postac_2 = im1 = postac.resize((w0,h0), 1, reducing_gap = None)
postac_3 = im1 = postac.resize((w0,h0), 2, reducing_gap = None)
postac_4 = im1 = postac.resize((w0,h0), 3, reducing_gap = None)
postac_5 = im1 = postac.resize((w0,h0), 4, reducing_gap = None)
postac_6 = im1 = postac.resize((w0,h0), 5, reducing_gap = None)

postac_1_2 = ImageChops.difference(postac_1, postac_2)
postac_1_3 = ImageChops.difference(postac_1, postac_3)
postac_1_4 = ImageChops.difference(postac_1, postac_4)
postac_1_5 = ImageChops.difference(postac_1, postac_5)
postac_1_6 = ImageChops.difference(postac_1, postac_6)

