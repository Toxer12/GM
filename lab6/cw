import numpy as np
from PIL import Image

b1 = Image.open("beksinski.png")
b2 = Image.open("beksinski1.png")
b3 = Image.open("beksinski2.png")
b4 = Image.open("beksinski3.png")

#Zad 6
def ocen_czy_indentyczne(obraz1, obraz2):

    if obraz1.mode != obraz2.mode:
        print("obrazy maja rozne tryby")
        return
    elif obraz1.size != obraz2.size:
        print("obrazy maja rozny romiar")
        return
    elif np.array_equal(obraz1, obraz2) == False:
        print("obrazy maja rozne kolory")
        return
    else:
        print("obrazy sa takie same")
    return
