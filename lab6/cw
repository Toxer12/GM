#Zad 7

#Zad 8

#Zad 9
def odkoduj(obraz1, obraz2):
    t_obraz = np.asarray(obraz1)
    t_zakodowany = np.asarray(obraz2)
    h, w, d = t_obraz.shape
    res = np.zeros((h, w))
    for i in range(h):
        for j in range(w):
            for k in range(d):
                if t_obraz[i, j, k] == t_zakodowany[i, j, k]:
                    res[i, j] = 0
                else:
                    res[i, j] = 255
    return res
